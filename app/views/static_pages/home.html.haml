%main.container{:role => "main"}
	.container.custom_margin_100
		.row
			.col
			.col-10.text-center
				%h1 Meetups client
				=form_with url: search_path, class: 'form-inline input-group mb-3 custom_margin_25' do |f|
					=f.text_field :query, class: 'form-control', placeholder: 'Type your search query'
					.input-group-append
						=f.submit 'Search', class: 'btn btn-outline-success'
			.col
		
		.row
			.col
			.col-10.response_container.custom_margin_25
			.col

